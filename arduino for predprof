#include <VirtualWire.h>

void setup() {
    Serial.begin(9600);
    vw_setup(2000); // Установка скорости передачи данных
    vw_set_rx_pin(3); // Установка пина для приема данных
    vw_rx_start(); // Запуск приема
}

void loop() {
    uint8_t buf[10]; // Буфер для хранения полученных данных
    uint8_t buflen = sizeof(buf);

    if (vw_get_message(buf, &buflen)) { // Если получено сообщение
        Serial.print("Received: ");
        for (int i = 0; i < buflen; i++) {
            Serial.print((char)buf[i]); // Выводим полученное сообщение
        }
        Serial.println();
    }
}
